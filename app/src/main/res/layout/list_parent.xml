<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="165dp"
android:background="#00FF0000"
android:padding="0dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:clickable="false"
    android:focusable="false"
    >
    <!-- android:foreground="?android:attr/selectableItemBackground"
    -->

    <ImageView
        android:id="@+id/sight_img"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/sight_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sight_img"
        android:layout_alignLeft="@id/sight_img"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sight_img"
        android:layout_alignTop="@+id/sight_img"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:lines="1"
        android:text="sample menu item parent"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
         />


</RelativeLayout>

</RelativeLayout>

